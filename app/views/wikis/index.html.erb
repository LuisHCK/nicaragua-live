<div class="container">
  <% @wikis.each do |wiki| %>
    <ul class="collection">

      <li class="collection-item">
        <h4><b><%= wiki.title %></b></h4>
      </li>

      <li class="collection-item">
        <%= image_tag wiki.cover.url(), class:"responsive-img materialboxed"%>

        <div class="overflow"><%= markdown(wiki.body) %></div>
        <%= link_to "Ver mÃ¡s", wiki %>
      </li>

      <li class="collection-item row center icon-navbar">
          <a href="#" style="margin-left:5%; margin-right:5%;">
          <%= icon('heart-o') %></a>
          <a href="#" style="margin-left:5%; margin-right:5%;">
          <%= icon('comment') %></a>
          <a href="#" style="margin-left:5%; margin-right:5%;">
          <%= icon('share') %></a>
      </li>

    </ul>
  <% end %>

  <% if editor(current_user) %>
        <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
            <a href="<%= new_wiki_path %>" class="btn-floating btn-large red">
              <%= icon('plus',class:'large material-icons') %>
            </a>
        </div>
  <% end %>
</div>

<script type="text/javascript">
    $(document).ready(function(){
    $('.materialboxed').materialbox();
    });
</script>
