
<% if user_signed_in? %>

  <% if current_user.heart?(post)%>
          <%= button_to unheart_path(post_id: post.id), remote: true, method: :delete, class:"col s4 btn-flat" do%>

            <i style="vertical-align: middle; font-size:2.5em;" class="material-icons red-text">favorite</i>


            <% end %>

          <% else %>

        <%= button_to heart_path(post_id: post.id), remote: true, class:"col s4 btn-flat" do%>
                <i style="vertical-align: middle; font-size:2.5em;" class="material-icons">favorite_border</i>


            <% end %>
    <% end %>


<% elsif client_signed_in? %>

  <% if current_client.heart?(post)%>
          <%= button_to unheart_path(post_id: post.id), remote: true, method: :delete, class:"btn-flat", style:"margin-top:0.5rem;" do%>

            <i style="vertical-align: middle; font-size:2.5em;" class="material-icons red-text">favorite</i>
            <% end %>
            <%= show_likes post %>

          <% else %>

            <%= button_to heart_path(post_id: post.id), remote: true, class:"btn-flat", style:"margin-top:0.5rem;" do%>
                <i style="vertical-align: middle; font-size:2.5em;" class="material-icons">favorite_border</i>
            <% end %>
            <%= show_likes post %>

    <% end %>
<% end %>

<% if client_signed_in? or user_signed_in? %>
  <% else %>
  <% if post.hearts.count > 0 %>
    <i style="vertical-align: middle; font-size:2.5em;" class="material-icons red-text">favorite</i>
    <% else %>
      <i style="vertical-align: middle; font-size:2.5em;" class="material-icons">favorite_border</i>
      <% end %>
<% end %>
