
<% if client_signed_in? %>

  <% if current_client.heart?(post)%>
          <%= button_to unheart_path(post_id: post.id), remote: true, method: :delete,style:"width:27%;", class:"col s4 btn-flat center" do%>

            <i style="vertical-align: middle; font-size:2.5em;" class="material-icons red-text">favorite</i>
            <% end %>

          <% else %>

            <%= button_to heart_path(post_id: post.id), remote: true,style:"width:27%;", class:"col s4 btn-flat center" do%>
                <i style="vertical-align: middle; font-size:2.5em;" class="material-icons">favorite_border</i>
            <% end %>
    <% end %>
<% end %>
