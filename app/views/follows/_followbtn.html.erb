<% if client_signed_in? %>
  <% if current_client.follow?(@profile) %>
    <%= button_to unfollow_path(profile_id: profile.id), remote: true,id:"follow", class:"btn small green", method: :delete do%>
      <%= icon("star") %>
      Siguiendo
    <% end %>
  <% else %>
    <%= button_to follow_path(profile_id: profile.id), class:"btn small grey", remote: true, id:"follow" do %>
      <%= icon("heart") %>
      Seguir
      <% end %>
  <% end %>

<% else %>
  <% if user_signed_in? %>
    <% if current_user.id == @profile.user_id %>
IGUAL
<% end %>
  <% end %>
<% end %>
