<div class="container">
<h5><%= @market.title %></h5>
  <% @market.items.each do  |item | %>
      <div  class="card row z-depth-1">
        <div class="col s5">
          <% item.pictures.limit(1).each do |pic| %>
            <%=link_to image_tag(pic.image, class:"responsive-img"), item%>
            <% end %>
        </div>
        <div class="col s7">
          <b><%= item.titulo %></b> <br>
          <b>Precio: </b>
          <% if item.precio == 'cordoba' %>
            C$
          <% else %>
            $
            <% end %>
                <%= item.precio %>
                <br>
          <b>Ubicaci√≥n: </b><%= item.ubicacion %>
        </div>
      </div>
  <% end %>

</div>
