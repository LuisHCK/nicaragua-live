<%= simple_form_for(@release) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :version %>
    <%= f.input :description %>
    <%= f.input :changelog %>
    <%= f.input :dwnl_link %>
    <%= f.input :dwnl_count %>
    <%= f.association :client %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
