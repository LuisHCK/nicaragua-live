<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <%= link_to image_tag(profile.avatar(), class:"promo-img responsive-img"), profile %>
        <div class="caption center">
            <b><%= profile.name %><%= veryfied?(profile) %></b>
            <br>
            <div class="star-rating" data-score=<%= profile.reviews.average(:rating) %>></div>
            <em><%= "#{profile.reviews.length} valoraciones" %></em><br>
            <p>
                <%= truncate(profile.body ) %><br>
                <b>Dirección:
                </b><%= profile.direccion %>
                <div class="center"><%= link_to 'Ver Más', profile_path(profile), class:"btn btn-primary" %></div>
            </p>
        </div>
    </div>
</div>
