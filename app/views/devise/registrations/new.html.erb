<div class="container">
  <h5>Registrarse</h5>
  <% if session_path(resource) == "/users/sign_in" %>
  <p class="center">
    <%= icon("exclamation-triangle") %> Crea una cuenta para tu negocio o empresa y muestra tus productos o
    servicios a los usuarios de <b>Estelí Live</b>
  </p>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title">Crear una Cuenta</h1>
        <div class="account-wall">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <div class="form-signin">
            <% unless session_path(resource) == "/users/sign_in" %>
            <%= f.input :first_name, label: false, placeholder:"Nombre",autofocus: true, class:"form-control" %>
            <%= f.input :last_name, label: false, placeholder:"Apellido",autofocus: true, class:"form-control" %>

            <% end %>
            <%= f.email_field :email, placeholder:"Correo", class:'form-control email' %>
            <%= f.password_field :password, placeholder:"Contraseña", autocomplete: "off", class:'form-control password' %>

            <%= f.submit 'Iniciar', class:"btn btn-lg btn-primary btn-block" %>
          </div>

          <% end %>
        </div>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>

</div>
