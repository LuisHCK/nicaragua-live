<div class="container grey-text darken-4">
<h5>Registrarse</h5>
<% if session_path(resource) == "/users/sign_in" %>
    <p>
      <%= icon("exclamation-triangle") %> Crea una cuenta para tu negocio o empresa y muestra tus productos o
      servicios a los usuarios de <b>Estelí Live</b>
    </p>
  <% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <% if session_path(resource) == "/clients/sign_in" %>
    <div class="row">
      <div class="col s6">
        <%= f.label "Nombre" %><br />
        <%= f.email_field :first_name, autofocus: true %>
      </div>
      <div class="col s6">
        <%= f.label "Apellido" %><br />
        <%= f.email_field :last_name %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Email" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label "Contraseña"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "Confirmar Contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Completar Registro", class:"btn-large teal darken-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
