<div class="container">
<div class="col-xs-8 col-xs-offset-2">
    <div class="page-header"><h3>Ediar datos de acceso</h3></div>
    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal' }) do |f| %>
    <%= f.input :email, label:"Correo Electrónico", as: :email %>
    <%= f.input :password, label:"Nueva contraseña", as: :password , autocomplete: :off %>
    <%= f.input :password_confirmation, label:"Confirmar contraseña", as: :password %>
    <em>Confirma tu contraseña actual para guardar los cambios</em>
    <%= f.input :current_password, label:"Contraseña actual", as: :password %>
    <%= f.button :submit, "Guardar", class:"btn btn-success btn-lg"%>
    <div>
      <br>
    </div>
    <% end %>

  </div>
</div>