 <% if object.errors.any? %>
  <div class="alert alert-danger" role="alert" id="error_explanation">
    <%= icon("exclamation") %> El formulario contiene: <%= pluralize(object.errors.count, "error") %>.
  <ul>
   <% object.errors.full_messages.each do |msg| %>
    <li>* <%= msg %></li>
   <% end %>
 </ul>
</div>
<% end %>