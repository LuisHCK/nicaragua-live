<div class="col-xs-6 col-xs-offset-3">
	<div class="page-header center"><h3>Iniciar Sesión</h3></div>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	<% if session[:omniauth_errors] %>
	<%= session[:omniauth_errors] %>
	<% end %>

	<% resource.errors.each do |msg| %>
		<%= msg %>
	<% end %>
	
	<div class="form-inputs">
		<%= f.input :email, required: false, autofocus: true %>
		<%= f.input :password,label:"Contraseña", required: false %>
		<%= f.input :remember_me, label:"Recordar contraseña", as: :boolean if devise_mapping.rememberable? %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, "Iniciar", class:"btn btn-lg btn-success" %>
	</div>
	<% end %>
	<br>
	<div class="center" style="max-width: 220px">
		<%= link_to user_facebook_omniauth_authorize_path, class:"btn btn-block btn-social btn-facebook" do %>
			<span class="fa fa-facebook"></span> Iniciar con Facebook
		<% end %>
	</div>
	<br>
	<%= render "devise/shared/links" %>

</div>