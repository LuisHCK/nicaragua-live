<div class="">
  <%= render "profile_info" %>
</div>

<div class="tab-content">
  <div role="tabpanel" class="tab-pane active container" style="max-width:700px;" id="tab1">
    <% if @pinned.present? %>
    <div class="page-header">
      <em><b>Publicaci√≥n destacada</b></em>
      <%= icon('star', class:"left yellow-text") %>
      <br>
      <%= render partial: "posts/post",locals:{post: @pinned, color: 'warning'} %>
    </div>
    <% end %><!---->
    <b>Recientes</b>
    <%= render "post_frame" %>
  </div>

  <div role="tabpanel" class="tab-pane container" id="tab2">
    <% if user_signed_in? %>
    <% if current_user.id == @profile.user_id %><br>
    <%= link_to "Publicar Oferta", new_offer_path, class:"btn teal right" %><br>
    <% end %>
    <% end %>

    <%= render @offers%>
  </div>

  <div role="tabpanel" class="tab-pane container" id="tab3">
    <div class="row">
      <% @profile.posts.order("created_at DESC").each do |post| %>
      <% unless post.pictures.empty? %>
      <% post.pictures.each do |pic| %>
      <div class="col-xs-6 col-md-4">
        <a class="thumbnail">
          <%= image_tag(pic.image, class:"responsive-img", lazy: true) %>
        </a>
      </div>
      <% end %>
      <% end %>
      <% end %>
    </div>

  </div>
</div>
<script>
  $("img.lazy").lazyload({
    effect : "fadeIn",
    treshold: 200
  });

  $('.star-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
  $('#myTabs a').click(function (e) {
    e.preventDefault()
    $(this).tab('show')
  })
</script>
