<div class="">
  <%= render "profile_info" %>
</div>


<div class="tab-content">
<div role="tabpanel" class="tab-pane active container" style="max-width:700px;" id="tab1">
    <br>
    Publicaci√≥n destacada
    <div class="card-panel grey lighten-5">
      <%= icon('star', class:"left yellow-text") %>
      <br>
      <%= render partial: "posts/post",locals:{post: @pinned} %>
    </div>

    <%= render "post_frame" %>
  </div>

  <div role="tabpanel" class="tab-pane active container" id="tab2">
    <% if user_signed_in? %>
    <% if current_user.id == @profile.user_id %><br>
    <%= link_to "Publicar Oferta", new_offer_path, class:"btn teal right" %><br>
    <% end %>
    <% end %>

    <%= render @offers%>
  </div>

  <div role="tabpanel" class="tab-pane active container" id="tab3">
    <div class="row">
      <% @profile.posts.order("created_at DESC").each do |post| %>
      <% unless post.pictures.empty? %>
      <% post.pictures.each do |pic| %>
      <div class="col-xs-6 col-md-4">
        <a class="thumbnail">
          <%= image_tag(pic.image, class:"responsive-img", lazy: true) %>
        </a>
      </div>
      <% end %>
      <% end %>
      <% end %>
    </div>

  </div>
</div>

<% if user_signed_in? && current_user.id == @profile.user_id %>
<div class="z-depth-1">
  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
    <a href="#modal1" class="modal-trigger btn-floating btn-large red">
      <%= icon('pencil') %>

    </a>
  </div>
  <%= render "posts/form" %>
  <% end %>

  <!-- Modal Structure -->
  <%= render "reviews/form" %>


  <script>
    $("img.lazy").lazyload({
      effect : "fadeIn",
      treshold: 100
    });

    $('.star-rating').raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      }
    });
    $('#myTabs a').click(function (e) {
      e.preventDefault()
      $(this).tab('show')
    })
  </script>
