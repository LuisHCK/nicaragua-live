<div class="container">
  <% if @profiles.present? %>
  <% @profiles.each do |profile| %>
    <div  class="card row z-depth-1">
      <div class="col s5">
        <%= link_to image_tag(profile.avatar(), class:"responsive-img"), profile %>
      </div>
      <div class="col s7">
        <b><%= profile.name %></b> <br>
        <div class="star-rating" data-score= <%= profile.reviews.average(:rating) %> ></div>
            <em><%= "#{profile.reviews.length} valoraciones" %></em><br>
              <p>
                <%= profile.body  %><br>
                <b>Direcci√≥n: </b><%= profile.direccion %>
              </p>
      </div>
    </div>
  <% end %>
  </div>

  <script>
  $('.star-rating').raty({
    readOnly: true,
    score: function() {
          return $(this).attr('data-score');
  }
  });
  </script>
  <% else %>
  <div class="center">
    <br>
    <%= image_tag 'search.png', class:"responsive-img" %><br>
  <h5 class="">No se encontraron resultados para: <em><%= params[:query] %></em></h5>
      <a href="/search" class="btn-large teal">
        <i class="material-icons left">search</i>
        Volver a Buscar</a>
  </div>
    <% end %>
</div>
