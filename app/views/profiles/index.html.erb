
<div class="container">
<% @profiles.each do |profile| %>

      <div class="row">
          <div class="card">
            <div class="card-image">
              <%= image_tag profile.cover.url(:card) %>
              <span style="text-shadow: 0px 0px 6px rgba(0, 0, 0, 1);" class="card-title text_transp"><%= profile.name %></span>
            </div>
            <div class="card-content">
              <p><%= profile.body %></p>
            </div>
            <div class="card-action">
              <%= link_to "Ver Mas", profile %>
            </div>
          </div>
      </div>

<% end %>
</div>
