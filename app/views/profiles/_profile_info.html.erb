<link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container" style="margin-top: 20px; margin-bottom: 20px;">
  <div class="row panel">
    <div class="col-md-4 bg_blur" style="    background-image:url('<%= @profile.cover.url() %>');
      ">
      <!--a href="#" class="follow_btn hidden-xs">Follow</a-->
      <%= render partial:'/follows/followbtn_client', locals:{profile: @profile} %>
    </div>
    <div class="col-md-8  col-xs-12">
      <%= image_tag(@profile.cover, class:"img-thumbnail picture hidden-xs") %>
      <%= image_tag(@profile.avatar, class:"img-thumbnail visible-xs picture_mob") %>
      <div class="header">
        <h1><%= @profile.name %></h1>
        <div class="star-rating" data-score= <%= @profile.reviews.average(:rating) %> ></div>
        <span><%= @profile.body %></span>
      </div>
    </div>
  </div>  
</div> 

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#tab1" aria-controls="profile" role="tab" data-toggle="tab">Publicaciones</a></li>
    <li role="presentation"><a href="#tab2" aria-controls="messages" role="tab" data-toggle="tab"><%= @profile.offer_section_name %></a>
    </li>

    <li role="presentation"><a href="#tab3" aria-controls="settings" role="tab" data-toggle="tab">Galer√≠a</a>
    </li>
  </ul>
  <script>
    $('.star-rating').raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      }
    });
  </script>