<div style="margin-top:3%;margin-bottom: 0px;" class="row">

  <div class="col s4 m2">
    <img style="margin-left:1%; max-width:100px;"
    src="<%= @profile.avatar.url(:mini) %>" alt="" class="circle responsive-img">
    <!-- Dropdown Trigger -->
    <a  class='dropdown-button btn green' href='#' data-activates='dropdown1'>Seguir</a>

    <!-- Dropdown Structure -->
    <ul id='dropdown1' class='dropdown-content'>
      <li><a href="#!">Seguir</a></li>
      <li><a href="#!">Â¡Quiero ir!</a></li>
    </ul>

  </div>

  <div style="padding-left:5%;" class="col s8 m6">
    <b><%= @profile.name %></b>
    <br>
    <%= @profile.body %>
    <br>
    <table class="striped centered">
      <thead>
        <tr>
            <th data-field="id">Publicaciones</th>
            <th data-field="name">Seguidores</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%=  @profile.posts.count %>
          </td>
        </tr>

        <tr>
          <td>
            <%= @profile.followers %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row center">
  <div>
    <b><i style="vertical-align: middle" class="material-icons blue-text">people</i> Redes Sociales</b>
  </div>
<% if @profile.facebook != nil%>
    <div class="fb-like" data-href= "<%= @profile.facebook %>"
    data-layout="button" data-action="like" data-show-faces="false"</div>
<% end %>

</div>
