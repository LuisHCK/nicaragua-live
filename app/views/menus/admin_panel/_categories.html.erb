		<tr>
			<td> <%= category.name %> </td>
			<td> <%= icon(category.icon,style:'font-size:2rem;') %> </td>
			<td> <%= link_to "Editar",[:edit, category], class:"btn gree" %>
				<%= link_to 'Eliminar', category,
				data: {confirm: 'Â¿Estas Seguro?'}, method: :delete, remote: true, class:"btn red", id:"btn-delete" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
