<div class="container">
  <!--Tarjetas-->
  <div class="alert-flat alert-info-flat center"><h5>Recomendados</h5></div>
  
  <%= render partial:'promo_profiles', locals:{promoved_profiles: @promoved_profiles} %>

</div>

<div class="container">
<div class="alert-flat alert-info-flat center"><h5>Ofertas recientes</h5></div>
  <div class="owl-caroucel" id="owl-offers">
    <%= render @offers %>
  </div>
</div>

<div class="container" >
  <% if user_signed_in? %>
  <div class="alert-flat alert-info-flat center"><h5>Inicio</h5></div>
  
  <div id="owl-post" class="owl-carousel">
    <%= render @posts %>
  </div>

  <div class="center">
   <ul class="pagination center">
    <div class="apple_pagination">
      <%= will_paginate @posts, container: false %>
    </div>
  </ul>
</div>

<% else %>
<div class="alert-flat alert-info-flat center"><h5>Tendencias</h5></div>
<div class="center-block">

  <div id="owl-post" class="owl-carousel">
    <%= render @posts.sort_by { |post| post.hearts.count }.reverse %>
  </div>

  <div class="center">
   <ul class="pagination center">
    <div class="apple_pagination">
      <%= will_paginate @posts, container: false %>
    </div>
  </ul>
</div>

</div>
<% end %>
</div>

<div class="container">
<div class="alert-flat alert-info-flat center"><h5>Comentarios recientes</h5></div>
  <div class="owl-carousel" id="owl-comments">
    <% @comments.each do |comment| %>
    <div class="col-xs-12">
      <%= render partial:"comments/comment", locals:{comment: comment} %>  
    </div>
    <% end %>
  </div>
  
  <div class="center">
   <ul class="pagination center">
    <div class="apple_pagination">
      <%= will_paginate @comments, container: false %>
    </div>
  </ul>
</div>
</div>

<script>
  $("img.lazy").lazyload({
    threshold : 200
  });

  $(document).ready(function() {

    $("#owl-comments").owlCarousel({
      items : 4,
      lazyLoad : true,
    });

    $("#owl-promo").owlCarousel({
      items : 4,
      lazyload : true,
    });

    $("#owl-post").owlCarousel({
      items : 4,
      lazyLoad : true,
    });

    $('#owl-offers').owlCarousel();

  });
</script>
