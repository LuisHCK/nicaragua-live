<div class="row">
    <% if @promoved_profiles.present? %>
    <% @promoved_profiles.each do |profile| %>
    <div class="col l6 s12">
        <div class="card row z-depth-1">
            <div class="col s4 l5">
                <%= link_to image_tag(profile.avatar(), class:"circle responsive-img"), profile %>
            </div>
            <div class="col s7">
                <b><%= profile.name %></b>
                <br>
                <div class="star-rating" data-score=<%= profile.reviews.average(:rating) %>></div>
                <em><%= "#{profile.reviews.length} valoraciones" %></em><br>
                <p>
                    <%= truncate(profile.body ) %><br>
                    <b>Direcci√≥n:
                    </b><%= profile.direccion %>
                </p>
            </div>
        </div>
    </div>
    <% end %>
</div>
<% end %>
<script>
    $('.star-rating').raty({
        readOnly: true,
        score: function () {
            return $(this).attr('data-score');
        }
    });
</script>
