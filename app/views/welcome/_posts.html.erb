<% @posts.order(created_at: :desc).each do |post| %>
  <ul class="collection z-depth-2">
    <li class="collection-item row">
      <img style="vertical-align: middle; margin-left:2%; max-width:50px;" src="<%= post.profile.avatar.url(:mini) %>" alt="" class="circle responsive-img">
      <b><%= link_to post.profile.name, post.profile %></b>

      <% if user_signed_in? %>
          <% if current_user.id == post.profile.user_id %>
            <%= link_to post, method: :delete, data: { confirm: '¿Borrar tu publicación?' }, class:"right" do%>
              <i class="material-icons">delete</i>
            <% end %>

            <%= link_to edit_post_path(post), class:"right" do%>
              <i class="material-icons">mode_edit</i>
            <% end %>
          <% end %>
      <% end %>

    </li>

    <li class="collection-item">
      <p class="responsive-text">
        <%= post.body %>
      </p>
      <% if post.pictures.count > 1 %>
        <div class="fotorama" data-nav="thumbs" data-allowfullscreen="true">
            <% post.pictures.each do |pic| %>
              <a href="<%= pic.image.url() %>"><img src="<%= pic.image.url(:thumb)%>"></a>
            <% end %>
        </div>
        <% else %>
        <% post.pictures.each do |pic| %>
        <div class="center">
          <%= image_tag(pic.image, class:"responsive-img")%>
        </div>
          <% end %>
      <% end %>

    </li>
    <%= div_for(post, class: "collection-item row center") do %>
      <% if client_signed_in? %>
        <%= render partial: "hearts/button_client", locals: {post: post} %>
      <% else %>
        <%= render partial: "hearts/button", locals: { post: post } %>
      <% end %>
   <% end %>

   </ul>
<% end %>
<!-- fotorama.css & fotorama.js. -->
<link  href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet"> <!-- 3 KB -->
<script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script> <!-- 16 KB -->
