<h5><%= @profile.offer_section_name %></h5>

<% if editable?(@profile) %>
  <i class="material-icons">mode_edit</i>
<% end %>
  <% @offers.each do  |offer | %>
      <div  class="card row z-depth-1">
        <div class="col s5">
          <%= link_to image_tag(offer.image, class:"responsive-img"), offer %>
        </div>
        <div class="col s7">
          <b><%= offer.titulo %></b> <br>
          <%= offer.descripcion.first(100) %>...<br>
          <b>Precio: </b>
          <% if offer.precio == 'cordoba' %>
            C$
          <% else %>
            $
            <% end %>
                <%= offer.precio %>
                <br>
        </div>
      </div>
  <% end %>
