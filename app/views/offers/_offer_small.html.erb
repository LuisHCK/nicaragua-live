<div class="col-lg-3 col-md-3">
  <div class="thumbnail">
    <%= image_tag(offer.image, lazy:true) %>
    <div class="caption">

      <h3> <%= offer.titulo %> </h3>

      <p><%= offer.descripcion.truncate_words(10) %></p>
      
      <b>Precio: </b>
      
      <%= precio(offer) %>
      <br>
      <p>
        <%= div_for(offer, class:"center") do %>
          <%= render(partial: '/offer_saveds/save_offer', 
          locals: { offer: offer }) %>
        <% end %>
      </p>
    </div>
  </div>
</div>
