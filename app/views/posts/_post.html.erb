  <div class="panel panel-primary">
    <div class="panel-heading">
      <img style="vertical-align: middle; margin-left:2%; max-width:50px;" src="<%= post.profile.avatar.url(:thumb) %>" alt="img" class="img-circle">
      <b class="panel-title"><%= link_to post.profile.name, post.profile %></b>

      <!--Acciones para los posts-->
      <div class="right actions-post">
        <%= post_edit(post) %>
        <%= post_delete(post) %>
      </div>

    </div>

    <div class="panel-body">
      <p class="responsive-text">
        <%= truncate(post.body, length: 140) { link_to "Ver mÃ¡s", post_path(post) } %>
      </p>
      <% if post.pictures.count > 1 %>
      <div class="fotorama" data-nav="thumbs" data-allowfullscreen="true">
        <% post.pictures.each do |pic| %>
        <a href="<%= pic.image.url() %>"><img src="<%= pic.image.url(:thumb)%>"></a>
      </div>
        <% end %>
      <% else %>
      <div class="row">
        <% post.pictures.each do |pic| %>
        <%= image_tag(pic.image.url, class:"responsive-img center-block", lazy: true)%>
        <% end %>
        </div>

      <% end %>

      <%= show_video(post) %>

    </div>

    <div class="panel-footer">
      <div class="row center">
              <%= div_for(post, class: "col-xs-4 center-block") do %>
      <%= render partial: "hearts/button", locals: {post: post} %>
      <% end %>
      <div class="col-xs-4 center-block">
        <%= link_to post do %>
        <%= icon('comments',style:'font-size:2rem;') %>
        <% end %>
      </div>
      <div class="col-xs-4 center-block">
        <%= icon('share-alt',style:'font-size:2rem;') %>
      </div>
      </div>
    </div>

  </div>

  <link href="//cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet">
